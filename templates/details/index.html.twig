{% extends 'base.html.twig' %}

{% block title %}{{product.nom}}{% endblock %}

{% block body %}
    <div class="name">                  
        <h3>{{product.nom}}</h3>
        <image src="{{product.image}}"></image>
    </div>
    <div class="description">
        <div class="container">
            <div class="col-12">            
                <p>{{product.description}}</p>
            </div>
        </div>
    </div>
    <div class="price">
        <h4>{{product.prix}} €</h4>
        <select id="qte">
            <option value="">Selectionnez une quantité</option>
            {% for i in 1..10 %}
                <option value="{{ i }}">{{ i }}</option>
            {% endfor %}
        </select>
        <button type="button" class="btn btn-success" onclick="addProductToCart({{product.id}})">Ajouter au panier</button>   
    </div>
{% endblock %}
